<%= form_with(url: dogs_path, method: :get, local: true) do |f| %>
  <%= f.select :sort, [["Default", "default"], ["Most likes in the last hour", "likes_last_hour"]], selected: params[:sort] %>
<%= f.submit "Sort" %>
<% end %>
<% @dogs.each_with_index do |dog, index| %>
  <%= render "dogs/thumbnail", dog: dog %>
  <% if index % 2 != 0 %>
    <%= image_tag("ad.jpg", alt: "Advertisement") %>
  <% end %>
<% end %>
<%= will_paginate @dogs %>